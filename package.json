{
    
  "name": "filament-electron-app",
  "version": "1.0.0",
  "description": "Desktop wrapper for Laravel Filament admin UI",
  "author": "DOMination Team",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourcompany.filamentapp",
    "productName": "hypermarket-app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/hepermaretLogo.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/hepermaretLogo.ico",
      "category": "Utility",
      "maintainer": "DOMination Team",
      "synopsis": "Supermarket management system"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "installerSidebar": "build\\sidebar.bmp",
      "uninstallerSidebar": "build\\sidebar.bmp",
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [],
  "license": "ISC"
}
